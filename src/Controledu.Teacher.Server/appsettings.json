{
  "TeacherServer": {
    "ServerName": "Teacher-Host",
    "HttpPort": 40556,
    "DiscoveryPort": 40555,
    "PairingPinLifetimeSeconds": 60,
    "PairingTokenLifetimeHours": 720,
    "StorageFile": "teacher-server.db",
    "TransferRoot": "transfers",
    "AllowHttp": true,
    "SignalRMaxReceiveMessageBytes": 4194304
  },
  "Detection": {
    "Enabled": true,
    "EvaluationIntervalSeconds": 5,
    "FrameChangeThreshold": 6,
    "MinRecheckIntervalSeconds": 5,
    "MetadataThreshold": 0.64,
    "MlThreshold": 0.72,
    "TemporalWindowSize": 3,
    "TemporalRequiredVotes": 2,
    "CooldownSeconds": 10,
    "Keywords": [
      "chatgpt",
      "openai",
      "claude",
      "anthropic",
      "gemini",
      "bard",
      "copilot",
      "perplexity",
      "deepseek",
      "poe"
    ],
    "WhitelistKeywords": [
      "wikipedia.org",
      "docs.python.org",
      "learn.microsoft.com"
    ],
    "DataCollectionModeEnabled": false,
    "DataCollectionMinIntervalSeconds": 30,
    "DataCollectionSampleRate": 0.0,
    "DataCollectionRetentionDays": 1,
    "DataCollectionStoreFullFrames": false,
    "DataCollectionStoreThumbnails": false,
    "IncludeAlertThumbnails": true,
    "AlertThumbnailWidth": 280,
    "AlertThumbnailHeight": 160,
    "PolicyVersion": "production-hardcoded-v1"
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  }
}
