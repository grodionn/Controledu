{
  "StudentHost": {
    "LocalPort": 40557,
    "StorageFile": "student-shared.db",
    "DiscoveryPort": 40555,
    "DiscoveryTimeoutMs": 1500,
    "AgentExecutablePath": "StudentAgent/Controledu.Student.Agent.exe",
    "WindowTitle": "Controledu Endpoint",
    "StartMaximized": false,
    "HandRaiseCooldownSeconds": 20
  },
  "AutoUpdate": {
    "Enabled": true,
    "ManifestUrl": "https://controledu.kilocraft.org/updates/student/manifest.json",
    "StartupDelaySeconds": 8,
    "CheckIntervalMinutes": 30,
    "DownloadTimeoutSeconds": 900
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
