{
  "StudentAgent": {
    "StorageFile": "student-shared.db",
    "HeartbeatIntervalSeconds": 5,
    "InitialFps": 45,
    "MinFps": 30,
    "MaxFps": 60,
    "InitialJpegQuality": 72,
    "MinJpegQuality": 28,
    "MaxJpegQuality": 88,
    "MaxCaptureWidth": 1920,
    "MaxCaptureHeight": 1080,
    "HandRaiseCooldownSeconds": 20,
    "ChunkSize": 262144,
    "TeacherTts": {
      "Enabled": false,
      "Provider": "google",
      "GoogleApiKey": "",
      "LanguageCode": "ru-RU",
      "VoiceName": "ru-RU-Wavenet-A",
      "SpeakingRate": 1.0,
      "Pitch": 0.0,
      "MaxTextLength": 600,
      "RespectAccessibilityToggle": true,
      "SelfHostBaseUrl": "https://tts.kilocraft.org",
      "SelfHostApiToken": "",
      "SelfHostTtsPath": "/v1/tts/synthesize",
      "SelfHostTimeoutSeconds": 20,
      "SelfHostDefaultVoice": "ru_RU-ruslan-medium",
      "SelfHostRussianVoice": "ru_RU-ruslan-medium",
      "SelfHostKazakhVoice": "kk_KZ-iseke-x_low",
      "SelfHostEnglishVoice": "en_US-amy-medium"
    },
    "Detection": {
      "Enabled": true,
      "EvaluationIntervalSeconds": 5,
      "FrameChangeThreshold": 6,
      "MinRecheckIntervalSeconds": 5,
      "MetadataThreshold": 0.64,
      "MlThreshold": 0.72,
      "TemporalWindowSize": 3,
      "TemporalRequiredVotes": 2,
      "CooldownSeconds": 10,
      "Keywords": [
        "chatgpt",
        "openai",
        "claude",
        "anthropic",
        "gemini",
        "bard",
        "copilot",
        "perplexity",
        "deepseek",
        "poe",
        "grok",
        "qwen",
        "mistral",
        "meta ai",
        "meta.ai"
      ],
      "WhitelistKeywords": [
        "wikipedia.org",
        "docs.python.org",
        "learn.microsoft.com"
      ],
      "DataCollectionModeEnabled": false,
      "DataCollectionMinIntervalSeconds": 30,
      "DataCollectionSampleRate": 0.0,
      "DataCollectionRetentionDays": 1,
      "DataCollectionStoreFullFrames": false,
      "DataCollectionStoreThumbnails": false,
      "IncludeAlertThumbnails": true,
      "AlertThumbnailWidth": 280,
      "AlertThumbnailHeight": 160,
      "PolicyVersion": "production-hardcoded-v1"
    },
    "Onnx": {
      "EnableBinary": true,
      "EnableMulticlass": true,
      "BinaryModelPath": "models/ai-ui-binary.onnx",
      "MulticlassModelPath": "models/ai-ui-multiclass.onnx",
      "ClassLabelsPath": "models/labels.txt",
      "InputWidth": 224,
      "InputHeight": 224,
      "BinaryThreshold": 0.72,
      "MulticlassThreshold": 0.7,
      "Provider": "CPU"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  }
}
